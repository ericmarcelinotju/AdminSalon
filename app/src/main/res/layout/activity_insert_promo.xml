<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dapurkreasi.ridho_alamsyah.adminsalon.menu_promo.InsertPromo"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="INSERT PROMO FORM"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promo Name"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPromoName"
        android:hint="Insert Promo Name here. . . "
        android:textSize="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="INSERT"
        android:layout_marginTop="20dp"
        android:background="@color/background"
        android:id="@+id/btnInsertPromo"
        />

    <ProgressBar
        android:id="@+id/progress_insert_promo"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="invisible" />




</LinearLayout>
